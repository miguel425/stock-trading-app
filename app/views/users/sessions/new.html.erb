<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
				<%= image_tag("figma_icons/coolicon.svg", alt: "user icon", :class => "user_icon") %>
				<%= f.email_field :email, autocomplete: "email", placeholder: "Enter Email" %>
			</div>
		
			<div class="field">
			<%= image_tag("figma_icons/lock_outline.svg", alt: "user icon", :class => "user_icon") %>
				<%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
			</div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
